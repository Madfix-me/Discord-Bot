{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "strict": "error",
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix" ],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "init-declarations": "off"
    }
}
